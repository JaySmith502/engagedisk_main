---
import '../utils/bootstrap.min.css';
import '../utils/owl.carousel.min.css';
import '../utils/styles.css';
---

<section id="sbs-1585">
    <div class="cs-container">
        
 
                    <!-- ........... start Unlock Powerful Insights.. section ........... -->
        <section class="sec_py">
            <div class="container">
                <h3 class="sec_subTitle text-center mb_43">Unlock Powerful Insights with Real-Time Analytics</h3>
                <div class="row g_30 align-items-center">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center py_30 border-bottom">
                            <div>
                                <div class="ft_iconBox">
                                    <i class="fi fi-rr-display-code"></i>
                                </div>
                            </div>
                            <div class="ps-3 ps-md-4 ps-xl-5 flex-grow-1">
                                <h4 class="fs_24 fw_black text_secondary mb_20">User-Friendly Dashboard:</h4>
                                <p class="mb-0">Gain valuable insights into your engagement metrics through our
                                    intuitive dashboard, empowering you to make data-driven decisions and optimize your
                                    strategies.</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center py_30 border-bottom">
                            <div>
                                <div class="ft_iconBox">
                                    <i class="fi fi-rr-newspaper"></i>
                                </div>
                            </div>
                            <div class="ps-3 ps-md-4 ps-xl-5 flex-grow-1">
                                <h4 class="fs_24 fw_black text_secondary mb_20">Comprehensive Reporting:</h4>
                                <p class="mb-0">Access detailed analytics reports to track tap interactions,
                                    click-throughs, and audience behavior, enabling you to measure the success of your
                                    events and campaigns.</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center py_30">
                            <div>
                                <div class="ft_iconBox">
                                    <i class="fi fi-rr-puzzle-alt"></i>
                                </div>
                            </div>
                            <div class="ps-3 ps-md-4 ps-xl-5 flex-grow-1">
                                <h4 class="fs_24 fw_black text_secondary mb_20">Seamless Integration:</h4>
                                <p class="mb-0">Our technology seamlessly integrates with your existing systems,
                                    ensuring a smooth setup process and minimal disruption to your operations.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <picture class="cs-picture">
                            <!--Mobile Image-->
                            <source media="(max-width: 600px)" srcset="https://engagedisk.b-cdn.net/mobile.png">
                            <!--Tablet and above Image-->
                            <source media="(min-width: 601px)" srcset="https://engagedisk.b-cdn.net/mobile.png">
                            <img loading="lazy" decoding="async" src="https://engagedisk.b-cdn.net/mobile.png" alt="a drawing of a mobile phone with the engagedisk bloom on it" width="637" height="554">
                        </picture>
                    </div>
                </div>
            </div>
        </section>
        <!-- ........... end Unlock Powerful Insights.. section ........... -->